{
  "name": "@acme/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "db:generate": "npm run with-env prisma generate && prisma format",
    "db:migrate": "npm run with-env prisma migrate dev --name mig",
    "db:push": "npm run with-env prisma db push --skip-generate",
    "db:studio": "npm run with-env prisma studio --port 5556",
    "dev": "tsc",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "postinstall": "npm run db:generate",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@t3-oss/env-core": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "dotenv-cli": "^10.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "prisma": "^6.15.0",
    "typescript": "catalog:"
  },
  "prettier": "@acme/prettier-config"
}
