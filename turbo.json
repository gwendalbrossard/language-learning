{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "@acme/nextjs#start": {
      "cache": false,
      "dependsOn": []
    },
    "@acme/ws-server#dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true,
      "inputs": ["src/**"]
    },
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^dev", "^db:generate"],
      "cache": false,
      "persistent": false
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:deploy": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  },
  "globalEnv": [
    "ASSETS_DOMAIN",
    "AUTH_SECRET",
    "AZURE_API_KEY",
    "AZURE_RESOURCE_NAME",
    "AZURE_SPEECH_KEY",
    "AZURE_SPEECH_REGION",
    "DATABASE_URL",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NEXT_PUBLIC_URL_API",
    "NEXT_PUBLIC_URL_WS",
    "OPENAI_API_KEY",
    "PORT",
    "R2_BUCKET_PUBLIC",
    "R2_BUCKET_PRIVATE",
    "R2_ENDPOINT_ID",
    "R2_ACCESS_KEY_ID",
    "R2_SECRET_ACCESS_KEY",
    "REVENUECAT_API_KEY",
    "REVENUECAT_PROJECT_ID",
    "REVENUECAT_WEBHOOK_SECRET"
  ],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "VERCEL", "VERCEL_ENV", "VERCEL_URL", "npm_lifecycle_event"]
}
